name: CI-CD-K8S-DH-ECR-FINAL-pipeline

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  BUILD:
    runs-on: [self-hosted, MDP]
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: temurin
          cache: maven

      - name: Build WAR
        run: mvn clean package

      - uses: actions/upload-artifact@v4
        with:
          name: war-file
          path: target/*.war

  SONARQUBE:
    runs-on: [self-hosted, MDP]
    needs: BUILD
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: temurin

      - name: Sonar Scan
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
        run: mvn verify sonar:sonar -Dsonar.qualitygate.wait=true

  SECURITY-CHECK:
    runs-on: [self-hosted, MDP]
    needs: SONARQUBE
    steps:
      - uses: actions/checkout@v4

      - name: Install Trivy
        run: |
          wget https://github.com/aquasecurity/trivy/releases/download/v0.67.2/trivy_0.67.2_Linux-64bit.deb
          sudo dpkg -i trivy_0.67.2_Linux-64bit.deb

      - name: Trivy filesystem scan
        run: trivy fs . --severity HIGH,CRITICAL --exit-code 0

  DOCKER-BUILD-PUSH:
    runs-on: [self-hosted, MDP]
    needs: SECURITY-CHECK
    steps:
      - uses: actions/checkout@v4

      - uses: actions/download-artifact@v4
        with:
          name: war-file

      - name: Prepare Docker context
        run: |
          mkdir docker-build
          mv *.war docker-build/app.war
          cp Dockerfile docker-build/
          ls -lh docker-build

      - name: DockerHub Login
        run: |
          echo "${{ secrets.DOCKERHUB_TOKEN }}" | docker login \
            -u "${{ secrets.DOCKERHUB_USERNAME }}" --password-stdin

      - name: Configure AWS
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}

      - name: Login to ECR
        run: |
          aws ecr get-login-password \
          | docker login --username AWS --password-stdin \
            770651355673.dkr.ecr.ap-south-1.amazonaws.com

      - name: Build & tag image
        run: |
          cd docker-build
          docker build -t mdprassadh/maven-war-app:${{ github.sha }} .
          docker tag mdprassadh/maven-war-app:${{ github.sha }} \
            770651355673.dkr.ecr.ap-south-1.amazonaws.com/maven-war-app:${{ github.sha }}

      - name: Push to Docker Hub
        run: docker push mdprassadh/maven-war-app:${{ github.sha }}

      - name: Push to ECR
        run: docker push 770651355673.dkr.ecr.ap-south-1.amazonaws.com/maven-war-app:${{ github.sha }}

  DEPLOY-EKS:
    runs-on: [self-hosted, MDP]
    needs: DOCKER-BUILD-PUSH
    steps:
      - uses: actions/checkout@v4

      - name: Configure AWS
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}

      - name: Update kubeconfig
        run: |
          aws eks update-kubeconfig \
            --region ${{ secrets.AWS_REGION }} \
            --name ${{ secrets.EKS_CLUSTER_NAME }}

      - name: Deploy to EKS
        run: |
          sed -i "s|IMAGE_TAG|${{ github.sha }}|g" k8s/deployment.yaml
          kubectl apply -f k8s/deployment.yaml
